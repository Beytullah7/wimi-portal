<%= form_for(@work_day) do |f| %>

  <% if @work_day.errors.any? %>
    <div class="row">
      <div class="col-md-12">
        <div id="error_explanation">
          <h2><%= pluralize(@work_day.errors.count, "error") %> prohibited this work_day from being saved:</h2>
          <ul>
            <% @work_day.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <div align="right">
        <font color="red">* <%= t('helpers.forms.required_field')%></font>
        </div>
        <%= f.label :date, class: "control-label" %><font color="red">*</font>
        <%= f.text_field :date, required: true, class: 'form-control', 'data-provide': "datepicker", 'data-date-orientation': "bottom auto", 'data-date-format': "dd-mm-yyyy", 'data-date-autoclose': true, 'data-date-language': I18n.locale %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :start_time, class: "control-label" %><font color="red">*</font><br>
        <%= f.time_select :start_time, {}, class: "form-control time-select" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :break, class: "control-label"  %> (<%= t('.minutes') %>) <font color="red">*</font>
        <%= f.number_field :break, value: 0, class: "form-control"%>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :end_time, class: "control-label"  %><font color="red">*</font> <br>
        <%= f.time_select :end_time, {}, class: "form-control time-select" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :attendance, class: "control-label"  %>
        <%= f.select :attendance, [['Normal', ''], ['Ill', 'K'], ['Holiday', 'F'], ['Leave Day', 'U']], {}, {class: "form-control"} %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :project, class: "control-label" %>
        <%= collection_select :work_day, :project_id, current_user.projects, :id, :title, {selected: @work_day.project_id}, class: "form-control"%>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :notes, class: "control-label"  %>
        <%= f.text_field :notes, class: "form-control" %>
      </div>
    </div>
  </div>
  <%= f.submit nil, class:"btn btn-success btn-block"%>
<% end %>
