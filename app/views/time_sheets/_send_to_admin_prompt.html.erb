<% url ||= '' %>
<% admin_emails = chair.admin_users.collect(&:email).join(",") %>
<div class="modal fade" id="send-to-admin-modal" role="dialog" aria-labelledby="add-user-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="add-user-label"><%= t('time_sheet.send_to_admin', user: admin_emails) %></h4>
      </div>
      <div class="modal-body" >
        <div class="row">
          <div class="col-md-6"><%= link_to t('helpers.links.continue'), url, class: 'btn btn-success btn-block' %></div>
          <div class="col-md-6"><button type="button" class="btn btn-danger btn-block" data-dismiss="modal" aria-hidden="true"><%= t('helpers.links.cancel')%></button></div>
        </div>
      </div>
    </div>
  </div>
</div>