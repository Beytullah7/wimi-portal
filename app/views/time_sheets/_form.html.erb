<%= form_for(@time_sheet) do |f| %>

  <%= render partial: "shared/form_validation_errors", locals: {object: @time_sheet} %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%#= f.label :salary, class: 'control-label' %><br>
        <%#= f.number_field :salary, class: "form-control" %>
        <%#= f.select :salary_is_per_month, [[t('.monthly'), true], [t('.hourly'), false]], {}, {class: "form-control"} %>
      </div>
    </div>
  </div>
  <%= f.submit nil, class:"btn btn-success btn-block" %>
<% end %>
