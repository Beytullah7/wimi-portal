<style>
  /* disable number field arrows*/
  input[type=number] {
      -moz-appearance:textfield;
  }

  input[type=number]::-webkit-inner-spin-button,
  input[type=number]::-webkit-outer-spin-button {
      -webkit-appearance: none;
      margin: 0;
  }

  td>.form-control[readonly] {
    cursor: auto !important;
    background-color: inherit !important;
  }

  td {
    text-align: center;
    position: relative;
  }

  th {
    text-align: center;
  }

  td.notes {
    text-align: left !important; 
  }

  span.helper-btns {
    display:none;
    width: 75px;
    position: absolute;
    left: -75px;
    height: 35px;
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
    border-left: 1px solid #ddd;
    top: 0px;
    background-color: #f5f5f5;
    padding-right: 5px;
  }

  span.helper-btns > .btn-xs {
    margin-top: 5px;
    /*line-height: 1.2;*/
    /*font-size: 16px;*/
  }

  tr:hover span.helper-btns {
    display:block;
  }

  tr.work_day_tr select {
    height: 28px;
    padding-top: 1px;
    padding-bottom: 1px;
    background-color: transparent;
    border-color: transparent;
    border-bottom: 1px solid #ccc;
  }
</style>

<script>
var d;

$( document ).ready(function() {
  $(function () {
    $('#submit').click(function (event) {
      $('.time_sheet_form')[0].submit();
    })
  })

  // Update hiden month and year fields when the timepicker values change
  $('#month-input').datepicker()
      .on('changeDate', function(e) {
          $('#time_sheet_month').val(e.date.getMonth()+1);
          $('#time_sheet_year').val(e.date.getFullYear());
      });

  function getRowInputs($row) {
    return $row.find('input:not([type=hidden])').not('.hidden');
  }

  function getRowSelects($row) {
    return $row.find('select');
  }

  function clearRow($row) {
    var inputs = getRowInputs($row);
    var selects = getRowSelects($row);
    inputs.val('');
    selects.prop('selectedIndex', 0);
  }

  $('.clear').click(function(){
    var tr = $(this).closest('tr');
    clearRow(tr);
  });

  $('.duplicate').click(function(){
    var current_tr = $(this).closest('tr');
    var current_inputs = getRowInputs(current_tr);
    var current_selects = getRowSelects(current_tr);
    // .next() returns a hidden input (of the nested form)
    var next_tr = current_tr.nextAll('tr').first();
    var next_inputs = getRowInputs(next_tr);
    var next_selects = getRowSelects(next_tr);

    current_inputs.each(function(i) {
      next_inputs.eq(i).val($(this).val());
    });
    current_selects.each(function(i) {
      // var current_option = $(this).find('option:selected').index();
      var current_opt = $(this).prop('selectedIndex');
      next_selects.eq(i).prop('selectedIndex', current_opt);
    });
  });

});
</script>

<% readonly ||= false %>
<% disable_date ||= false %>
<% hide_work_days ||= false %>

<% form_object = @time_sheet.new_record? ? [@time_sheet.contract,@time_sheet] : @time_sheet %>
<%= form_for form_object, html: {class: 'time_sheet_form'} do |f| %>

  <%# Allow to submit the form without JS for testing %>
  <%= f.submit nil, id: "hiddensubmit", class:'hidden' %>

  <%= render partial: "shared/form_validation_errors", locals: {object: @time_sheet} %>

  <% if disable_date %>
    <p>
      <strong><%= t('time_sheet.month_year')%>:</strong>
      <%= l f.object.first_day , format: :without_day %>
      <%= f.number_field :month, class: 'hidden'%>
      <%= f.number_field :year, class: 'hidden'%>
    </p>
  <% else %>
    <div class="row">
      <div class="col-md-4 col-sm-4">
        <% month_errors = f.object.errors[:month].concat(f.object.errors[:year]) %>
        <div class="form-group <%= 'has-error' if month_errors.any? %>">
          <%= f.label :month, class: 'control-label' %>
          <%# text field augmented with datepicker %>
          <%= text_field_tag 'month-input', nil, class: "form-control", 'data-provide': "datepicker", 'data-date-min-view-mode': "months", 'data-date-orientation': "bottom auto", 'data-date-format': "mm/yyyy", 'data-date-language': I18n.locale, value: "#{Date.today.month}/#{Date.today.year}"%>
          <%= content_tag :span, month_errors.join(', '), :class => "help-block" if month_errors.any? %>
        </div>
      </div>
      <div class="col-md-8 col-sm-8">
        <dl>
          <dt><%= t('activerecord.models.contract.one').capitalize %></dt>
          <dd><%= f.object.contract %></dd>
        </dl>
      </div>
    </div>
    <%# Hidden fields updated by JS when the datepicker selection changes %>
    <%= f.number_field :month, class: "hidden" %>
    <%= f.number_field :year, class: "hidden" %>
  <% end %>

  <% unless hide_work_days %>
  <div class="row">
    <div class="col-md-12">
      <% if @time_sheet.work_days.empty? %>
        <hr>
        <%= content_tag :div, t('.empty_work_days'), class: 'text-center'%>
      <% else %>
      <table class="table table-hover">
        <tr>
          <%= content_tag :th, WorkDay.human_attribute_name(:date), colspan: 2 %>
          <%= content_tag :th, WorkDay.human_attribute_name(:start_time) %>
          <%= content_tag :th, WorkDay.human_attribute_name(:break) %>
          <%= content_tag :th, WorkDay.human_attribute_name(:end_time) %>
          <%= content_tag :th, WorkDay.human_attribute_name(:notes) %>
          <%= content_tag :th, WorkDay.human_attribute_name(:project), style: 'width:200px;' %>
          <%= content_tag :th, WorkDay.human_attribute_name(:attendance) %>
        </tr>
        <%= f.fields_for :work_days, @time_sheet.work_days.to_a.sort! {|a,b| a.date <=> b.date } do |t| %>
          <tr class="work_day_tr">
            <td>
              <% if not readonly %>
                <span class="helper-btns hidden-xs">
                  <button type="button" class="btn btn-danger btn-xs clear" title="Clear work day">
                    <i class="fa fa-times" aria-hidden="true"></i>
                  </button>
                  <button type="button" class="btn btn-warning btn-xs duplicate" title="Copy entry to next work day">
                    <i class="fa fa-files-o" aria-hidden="true"></i>
                  </button>
                </span>
              <% end %>
              <%= l t.object.date, format: :weekday_short %>
            </td>
            <td>
              <%= t.date_field :date, readonly: true, class: 'hidden'%>
              <%= l t.object.date, format: :day_month %>
            </td>
            <% if readonly %>
              <td>
                <%= l t.object.start_time, format: :hours_minutes %>
              </td>
              <td>
                <%= t.object.break %>
              </td>
              <td>
                <%= l t.object.end_time, format: :hours_minutes %>
              </td>
              <td class="notes">
                <%= t.object.notes %>
              </td>
              <td>
                <%= t.object.project.title %>
              </td>
              <td>
                <%= t.object.status %>
              </td>
            <% else %>
              <td <%= 'class=has-error' if (t.object.errors[:start_time].any? or t.object.errors[:duration].any?) %>>
                <%= t.text_field :start_time , value: t.object.start_time ? l(t.object.start_time, format: :hours_minutes) : "", size: 5, maxlength: 5, readonly: readonly, placeholder: "00:00" %>
                <%= content_tag :span, t.object.errors[:start_time].concat(t.object.errors[:duration]).join(', '), :class => "help-block" if t.object.errors[:duration].any? %>
              </td>
              <td <%= 'class=has-error' if t.object.errors[:break].any? %>>
                <%= t.number_field :break , in: 0..2400, size: 4, maxlength: 4 , readonly: readonly, placeholder: "0"  %>
                <%= content_tag :span, t.object.errors[:break].join(', '), :class => "help-block" if t.object.errors[:break].any? %>
              </td>
              <td <%= 'class=has-error' if t.object.errors[:end_time].any? %>>
                <%= t.text_field :end_time , value: t.object.end_time ? l(t.object.end_time, format: :hours_minutes) : "", size: 5, maxlength: 5, readonly: readonly, placeholder: "00:00" %>
                <%= content_tag :span, t.object.errors[:end_time].join(', '), :class => "help-block" if t.object.errors[:end_time].any? %>
              </td>

              <td>
                <%= t.text_field :notes , size: 50, class: 'form-control', readonly: readonly,placeholder: t('.note_placeholder')  %>
              </td>
              <td <%= 'class=has-error' if t.object.errors[:project_id].any? %>>
                <%= t.select(:project_id, @projects.collect {|p| [p.title,p.id]}, {}, { :class => 'form-control', :readonly => readonly }) %>
                <%= content_tag :span, t.object.errors[:project_id].join(', '), :class => "help-block" if t.object.errors[:project_id].any? %>
              </td>
              <td>
                <%= t.select(:status, [["",""], [t('activerecord.attributes.work_day.attendance_options.sick'), 'K'], [t('activerecord.attributes.work_day.attendance_options.holiday'), 'F']], {}, {class: 'form-control', readonly: readonly }) %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </table>
      <% end %> <%# if @time_sheet.work_days.empty? %>
    </div>
  </div>
  <% end %> <%# unless hide_work_days %>

  <% content_for :actions do %>
    <% unless readonly %>
      <%= f.submit nil, class:"btn btn-success btn-block", id: "submit" %>
    <% end %>
  <% end %>

<% end %>
