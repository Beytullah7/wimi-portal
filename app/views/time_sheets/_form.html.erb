<style>
  /* disable number field arrows*/
  input[type=number] {
      -moz-appearance:textfield;
  }

  input[type=number]::-webkit-inner-spin-button,
  input[type=number]::-webkit-outer-spin-button {
      -webkit-appearance: none;
      margin: 0;
  }

  td>.form-control[readonly] {
    cursor: auto !important;
    background-color: inherit !important;
  }

  td {
    text-align: center;
  }
  th {
    text-align: center;
  }

  td.notes {
    text-align: left !important; 
  }
</style>

<script>
  $(function () {
    $('#submit').click(function (event) {
      $('.time_sheet_form')[0].submit();
    })
  })
</script>

<% readonly ||= false %>
<% disable_date ||= false %>
<%= form_for [@time_sheet.contract,@time_sheet], html: {class: 'time_sheet_form'} do |f| %>

  <% if disable_date %>
    <p>
      <strong><%= t('time_sheet.month_year')%>:</strong>
      <%= l Date.new(2000, f.object.month), format: :without_day_year %>
      <%= f.number_field :month, class: 'hidden'%>
      <%= l Date.new(f.object.year), format: :without_day_month %>
      <%= f.number_field :year, class: 'hidden'%>
    </p>
  <% else %>
    <div class="row">
      <div class="col-md-6">
        <%= bootstrap_form_group(f, :month) do %>
            <%= f.number_field :month, class: "form-control" , readonly: disable_date%>
        <% end %>
      </div>
      <div class="col-md-6">
        <%= bootstrap_form_group(f, :year) do %>
            <%= f.number_field :year, class: "form-control" , readonly: disable_date%>
        <% end %>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <tr>
          <th colspan="2"><%= t('activerecord.attributes.work_day.date') %></th>
          <th><%= t('activerecord.attributes.work_day.start_time') %></th>
          <th><%= t('activerecord.attributes.work_day.break') %></th>
          <th><%= t('activerecord.attributes.work_day.end_time') %></th>
          <th><%= t('activerecord.attributes.work_day.notes') %></th>
          <th style="width:200px;"><%= t('activerecord.attributes.work_day.project') %></th>
          <th><%= t('activerecord.attributes.work_day.attendance') %></th>
        </tr>
        <%= f.fields_for :work_days, @time_sheet.work_days.to_a.sort! {|a,b| a.date <=> b.date } do |t| %>
          <tr class="work_day_tr">
            <td>
              <%= l t.object.date, format: :weekday_short %>
            </td>
            <td>
              <%= t.date_field :date, readonly: true, class: 'hidden'%>
              <%= l t.object.date, format: :day_month %>
            </td>
            <% if readonly %>
              <td>
                <%= l t.object.start_time, format: :hours_minutes %>
              </td>
              <td>
                <%= t.object.break %>
              </td>
              <td>
                <%= l t.object.end_time, format: :hours_minutes %>
              </td>
              <td class="notes">
                <%= t.object.notes %>
              </td>
              <td>
                <%= t.object.project.title %>
              </td>
              <td>
                <%= t.object.status %>
              </td>
            <% else %>
              <td class=<%=error_class(t.object, :start_time)%>>
                <%= t.time_field :start_time , value: t.object.start_time ? l(t.object.start_time, format: :hours_minutes) : "", size: 5, maxlength: 5, readonly: readonly%>
              </td>
              <td class=<%=error_class(t.object, :break)%>>
                <%= t.number_field :break , in:0..2400, size: 4, maxlength: 4 , readonly: readonly %>
              </td>
              <td class=<%=error_class(t.object, :end_time)%>>
                <%= t.time_field :end_time , value: t.object.end_time ? l(t.object.end_time, format: :hours_minutes) : "", size: 5, maxlength: 5, readonly: readonly %>
              </td>
              <td>
                <%= t.text_field :notes , size: 50, class: 'form-control', readonly: readonly %>
              </td>
              <td class=<%=error_class(t.object, :project_id)%>>
                <%= t.select(:project_id, @projects.collect {|p| [p.title,p.id]}, {}, { :class => 'form-control', :readonly => readonly }) %>
              </td>
              <td>
                <%= t.text_field :status, size: 1, class: 'form-control', readonly: readonly %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

  <% content_for :actions do %>
    <div class="row">
      <div class="col-sm-12">
        <% unless readonly %>
          <%= f.submit nil, class:"btn btn-success btn-block", id: "submit" %>
        <% end %>
      </div>
    </div>
  <% end %>

<% end %>
