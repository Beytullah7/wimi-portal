<p id="notice"><%= notice %></p>

<h1>Listing Time Sheets</h1>

<table>
  <thead>
    <tr>
      <th>Month</th>
      <th>Yeat</th>
      <th>Salary</th>
      <th>Salary is per month</th>
      <th>Workload</th>
      <th>Workload is per month</th>
      <th>User</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_sheets.each do |time_sheet| %>
      <tr>
        <td><%= time_sheet.month %></td>
        <td><%= time_sheet.yeat %></td>
        <td><%= time_sheet.salary %></td>
        <td><%= time_sheet.salary_is_per_month %></td>
        <td><%= time_sheet.workload %></td>
        <td><%= time_sheet.workload_is_per_month %></td>
        <td><%= time_sheet.user_id %></td>
        <td><%= time_sheet.project_id %></td>
        <td><%= link_to 'Show', time_sheet %></td>
        <td><%= link_to 'Edit', edit_time_sheet_path(time_sheet) %></td>
        <td><%= link_to 'Destroy', time_sheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

