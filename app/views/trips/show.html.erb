  <%= link_to 'Edit', edit_trip_path(@trip) %> |
  <%= link_to 'Apply', trips_apply_path(id: @trip), method: post %> |
<%end%>

<%= link_to 'Back', trips_path %> |
<%= link_to 'Download', generate_pdf_path(doc_type: 'Dienstreiseantrag', doc_id: @trip) %>

