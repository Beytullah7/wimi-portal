<div class="col-md-12">
  <div class="display">
    <p id="notice"><%= notice %></p>
    <%- model_class = Trip -%>
    <div class="page-header">
      <h1>
        <div class="row">
          <div class="col-sm-9">
            <%=t '.title', default: model_class.model_name.human(count: 2).titleize %>
          </div>
          <div class="col-sm-3">
            <%= create_button Trip, class: 'btn-block' %>
          </div>
        </div>
      </h1>
    </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:destination) %></th>
          <th><%= model_class.human_attribute_name(:reason) %></th>
          <th><%= model_class.human_attribute_name(:annotation) %></th>
          <th><%= model_class.human_attribute_name(:status) %></th>
          <th><%= model_class.human_attribute_name(:date_start) %></th>
          <th><%= model_class.human_attribute_name(:date_end) %></th>
          <th><%= model_class.human_attribute_name(:days_abroad) %></th>
          <th></th>

          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @trips.each do |trip| %>
          <tr>
            <td><%= trip.destination %></td>
            <td><%= trip.reason %></td>
            <td><%= trip.annotation %></td>
            <td><%= trip.status %></td>
            <td><%=l trip.date_start %></td>
            <td><%=l trip.date_end %></td>
            <td><%= trip.days_abroad %></td>
            <td>
            <%= link_to t('helpers.links.show_details'), trip, class: "btn btn-default btn-xs" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
