<div class="modal fade" id="add-users-modal" role="dialog" aria-labelledby="add-user-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="add-user-label"><%= t('chair.user.add_prompt_specific', chair: @chair.name) %></h4>
      </div>
      <div class="modal-body" >
        <div class="row add-user">
          <div class="col-sm-12">
            <div class="description-text">
              <%= form_for :add_user_to_chair, url: add_user_chair_path(@chair) do |f| %>
                <div class="modal-body clearfix" >
                  <%= f.collection_select :id, User.all, :id, :name_with_email, {:include_blank => true}, {:class=>'form-control user-auto-complete'} %>
                </div>
                <%= f.submit t('links.submit'), class: "btn btn-primary" %>
                <span class="btn btn-default" data-dismiss="modal"><%= t("helpers.links.back") %></span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>