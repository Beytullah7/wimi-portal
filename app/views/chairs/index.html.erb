<%- model_class = Chair -%>
<div class="col-md-12 col-sm-12">
  <div class="display">
  <div class="page-header">
    <h1><%= t 'activerecord.models.chair.other', default: model_class.model_name.human.pluralize.titleize %></h1>
  </div>
  <% if @chairs.empty? %>
      <p> <%= t 'no_entries_yet', target: (t 'activerecord.models.chair.other', default: model_class.model_name.human.pluralize) %> </p> <br>
  <% else %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:name) %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @chairs.each do |chair| %>
          <tr>
            <% if can?(:show, chair) %>
              <td><%= link_to chair.name, chair_path(chair) %></td>
            <% else %>
              <td><%= chair.name %></td>
            <% end %>
              <td> 
              <% if can?(:edit, chair) %>
                    <%= link_to t('helpers.links.edit'), edit_chair_path(chair), class: 'btn btn-warning btn-xs' %>
              <% end %>
              <% if can?(:destroy, chair) %>
                    <%= link_to t('helpers.links.destroy'), chair_path(id: chair), method: :delete, data: {confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?'))}, class: 'btn btn-danger btn-xs' %>
              <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
    <% if can? :create, Chair %>
      <%= link_to t('helpers.titles.new', model: model_class.model_name.human.titleize),
                  new_chair_path,
                  class: 'btn btn-success btn-block' %>
    <% end %>
  </div>
</div>
