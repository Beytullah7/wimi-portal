<%= form_for @user, url: {action: "update"}, :html => { :class => "form-horizontal" } do |f| %>

    <% if @user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="col-md-12">
    <div class="col-md-4">
      <div class="control-group">
        <%= f.label :first, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :first, :class => 'form-control' %>
        </div>
        <%= error_span(@user[:first]) %>
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <div class="col-md-4">
      <div class="control-group">
        <%= f.label :last_name, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :last_name, :class => 'form-control' %>
        </div>
        <%= error_span(@user[:last_name]) %>
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <div class="col-md-4">
      <div class="control-group">
        <%= f.label :email, :class => 'control-label' %>
        <div class="controls">
          <% if @user.email.blank? %>
            <%= f.text_field :email, :class => 'form-control' %>
          <% else %>
            <%= label_tag @user.email %>
          <% end %>
        </div>
        <%= error_span(@user[:email]) %>
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>
<% end %>