<%- model_class = WorkDay -%>
<p id="notice"><%= notice %></p>
<div class="page-header">
  <h1>Work hours for <%= @work_month.full_name %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:start_time) %></th>
      <th><%= model_class.human_attribute_name(:brake) %></th>
      <th><%= model_class.human_attribute_name(:end_time) %></th>
      <th><%= model_class.human_attribute_name(:duration) %></th>
      <th>*</th>
      <th><%= model_class.human_attribute_name(:notes) %></th>
    </tr>
  </thead>
  <tbody>
     <% @work_month.work_days.each do |day| %>
     <tr>
        <td><%= day.date %></td>
        <td><%= day.start_time.strftime('%H:%M') %></td>
        <td><%= day.brake %></td>
        <td><%= day.end_time.strftime('%H:%M') %></td>
        <td><%= day.duration %></td>
        <td><%= day.attendance %></td>
        <td><%= day.notes %></td>
        <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_work_day_path(day), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        work_day_path(day),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
        </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "new", new_work_day_path(:work_month_id => @work_month.id),
    :class => 'btn btn-primary' %>
