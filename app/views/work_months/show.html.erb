<%- model_class = WorkDay -%>
<p id="notice"><%= notice %></p>
<div class="page-header">
  <h1>Work hours for <%= @work_month.full_name %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:start_time) %></th>
      <th><%= model_class.human_attribute_name(:brake) %></th>
      <th><%= model_class.human_attribute_name(:end_time) %></th>
      <th><%= model_class.human_attribute_name(:attendance) %></th>
      <th><%= model_class.human_attribute_name(:notes) %></th>
    </tr>
  </thead>
  <tbody>
      <% @work_month.work_days.each do |day| %>
        <td><%= day.date %></td>
        <td><%= day.start_time.strftime('%H:%M') %></td>
        <td><%= day.brake %></td>
        <td><%= day.end_time.strftime('%H:%M') %></td>
        <td><%= day.attendance %></td>
        <td><%= day.notes %></td>
      <% end %>
  </tbody>
</table>

<%= link_to "new", new_work_day_path(:work_month_id => @work_month.id),
    :class => 'btn btn-primary' %>
