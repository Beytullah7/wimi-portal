<%= link_to "E-Mail anzeigen", edit_user_registration_path, class: "btn btn-default"%>
<p></p>
<div class="panel panel-default">
  <div class="text text-right">
    <%= link_to "Bearbeiten", edit_user_path %>
  </div>
  <div class="panel-heading">
    <h4>Personenbezogene Daten</h4>
  </div>
  <div class="panel-body">
    <p>Vorname: <%= current_user.first %></p>
    <p>Name: <%= current_user.last_name %></p>
    <p>Wohnort: <%= current_user.residence %></p>
    <p>Stra√üe: <%= current_user.street %></p>
    <p>Abteilung: <%= current_user.division %></p>
    <p>Personalnummer: <%= current_user.number %></p>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Arbeitszeiten</h4>
  </div>
  <div class="panel-body">
    <% @year_months.each do |month| %>
	    <p>
        <%= link_to Date::MONTHNAMES[month.last] + " " + month.first.to_s,
  	 	  work_days_path(month: month.last, year: month.first)%>
        <% current_user.projects_for_month(month.first, month.last).each do |project|%>
          <%= link_to project.title, work_days_path(month: month.last, year: month.first, project: project.id)%>
        <% end %>
      </p>
  	<% end %>
  </div>
</div>
