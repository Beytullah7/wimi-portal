<div class="panel panel-default">
	<div class="panel panel-heading">
		<h4><%= t('.event_settings') %></h4>
	</div>
	<div class="panel panel-body">
		<table class="table table-condensed table-hover">
		  <tbody>
		    <% Event.types.each do |typename, val| %>
		      <tr>
		        <%# .show sets element to display:block using bootstrap stylesheet, making label take up the width of the <td> %>
		        <td><%= I18n.t('event.user_friendly_name.' + typename)%></td>
		        <td><span class="<%= user.event_settings.include?(val) ? "fa fa-check" : "fa fa-times"%>"></span></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>
