<%= form_for(@user) do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Personenbezogene Daten</h4>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label "Vorname", class: 'control-label' %>
        <%= f.text_field :first, value: @user.first, class: 'form-control' %>
        <%= error_span(@user[:first]) %>
      </div>
      <div class="form-group">
        <%= f.label "Nachname", class: 'control-label' %>
        <%= f.text_field :last_name, value: @user.last_name, class: 'form-control' %>
        <%= error_span(@user[:last_name]) %>
      </div>
      <div class="form-group">
        <%= f.label "StraÃŸe", class: 'control-label' %>
        <%= f.text_field :street, value: @user.street, class: 'form-control' %>
        <%= error_span(@user[:street]) %>
      </div>
      <div class="form-group">
        <%= f.label "Abteilung", class: 'control-label' %>
        <%= f.text_field :division, value: @user.division, class: 'form-control' %>
        <%= error_span(@user[:division]) %>
      </div>
      <div class="form-group">
        <%= f.label "Personalnummer", class: 'control-label' %>
        <%= f.text_field :number, value: @user.number, class: 'form-control' %>
        <%= error_span(@user[:number]) %>
      </div>
      <%= f.submit nil, class: 'btn btn-primary' %>
        <%= link_to "Abbrechen", current_user, class: "btn btn-default" %>
    </div>
  </div>

<% end %>
