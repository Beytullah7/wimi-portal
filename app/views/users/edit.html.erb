<%- model_class = User -%>

<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>

<%= form_for @user, :html => { :class => "form-horizontal user" } do |f| %>
 
  <% if @user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <div class="control-group">
    <%= f.label :first, class: 'control-label' %>
    <%= f.text_field :first, value: @user.first, class: 'form-control' %>
    <%= error_span(@user[:first]) %>
  </div>

  <div class="control-group">
    <%= f.label :lastname, class: 'control-label' %>
    <%= f.text_field :last_name, value: @user.last_name, class: 'form-control' %>
    <%= error_span(@user[:last_name]) %>
  </div>

  <div class="control-group">
    <%= f.label :residence, class: 'control-label' %>
    <%= f.text_field :residence, value: @user.residence, class: 'form-control' %>
    <%= error_span(@user[:residence]) %>
  </div>

  <div class="control-group">
    <%= f.label :street, class: 'control-label' %>
    <%= f.text_field :street, value: @user.street, class: 'form-control' %>
    <%= error_span(@user[:street]) %>
  </div>

  <div class="control-group">
    <%= f.label :division, class: 'control-label' %>
    <%= f.select :division, User::DIVISIONS, {selected: current_user.division}, {class: 'form-control'} %>
    <%= error_span(@user[:division]) %>
  </div>

  <div class="control-group">
    <%= f.label :number, class: 'control-label' %>
    <%= f.text_field :number, value: @user.number, class: 'form-control' %>
    <%= error_span(@user[:number]) %>
  </div>

  <div class="control-group">
    <%= f.label :language, class: 'control-label' %>
    <%= f.select :language, User::LANGUAGES, {selected: current_user.language}, {class: 'form-control'} %>
    <%= error_span(@user[:language]) %>
  </div>

  <br>

  <%= f.submit nil, class: 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")), current_user, class: "btn btn-default" %>


<% end %>
