<%- model_class = Project -%>
<!-- header -->
<div class="col-md-12 col-sm-12">
  <div class="display">
    <div class="page-header">
      <h1> <%= t('.dashboard_title') %></h1>
    </div>
  </div>
</div>

<!-- Notifications -->
<% unless @notifications.empty? %>
<div class="col-md-12 col-sm-12">
  <div class="display">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4><%=t('.notifications')%></h4>
      </div>
      <div class="panel-body">
        <% @notifications.each do |event| %>
          <%= render partial: event %>
          <%= link_to t('helpers.submit.hide'), hide_event_path(id: event, request: current_user), method: :post, class: 'label label-warning' %>
          <br>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>

<!-- Activities -->
<% unless current_user.is_user? and @activities.empty? %>
<div class="col-md-12 col-sm-12">
  <div class="display">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4><%=t('.activities')%></h4>
      </div>
      <div class="panel-body">
        <% unless @activities.empty? %>
          <% @activities.each do |event| %>
            <%= render partial: event %>
            <%= link_to t('helpers.submit.hide'), hide_event_path(id: event, request: current_user), method: :post, class: 'label label-warning' %>
            <br>
          <% end %>
        <% else %>
          <%= t('.activities_empty') %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>

<!-- chair management for superadmin -->
<% if can? :manage, Chair %>
  <div class="col-md-12 col-sm-12">
    <div class="display">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4> <%= t('activerecord.models.chair.other') %> </h4>
        </div>
        <div class="panel panel-body">
          <table class="table table-striped">
            <thead>
              <tr>
                <th><%= t('activerecord.attributes.chair.id', default: model_class.human_attribute_name(:id)) %></th>
                <th><%= t('activerecord.attributes.chair.name', default: model_class.human_attribute_name(:name)) %></th>
                <th><%= t('activerecord.attributes.chair.created_at', default: model_class.human_attribute_name(:created_at)) %></th>
              </tr>
            </thead>
            <tbody>
              <% Chair.all.each do |chair| %>
              <tr>
                <td><%= chair.id %></td>
                <td><%= chair.name %></td>
                <td><%=l chair.created_at %></td>
                <td>
                  <%= link_to I18n.t('helpers.titles.edit', model: Chair.model_name.human.titleize), edit_chair_path(chair), class: 'btn btn-warning btn-xs' %><br />
                  <%= link_to I18n.t('helpers.titles.destroy', model: Chair.model_name.human.titleize), chair_path(id: chair), method: :delete, data: {confirm: t('.confirm', default: t('helpers.links.confirm'))}, class: 'btn btn-danger btn-xs' %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <br>
          <%= link_to t('chair.add_chair'), new_chair_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% content_for :sidebar do %>
  <!-- Projects -->
  <%= render partial: 'projects' %>

  <% action_content = render partial: 'actions' %>
  <% if action_content.present? %>
    <!--Actions-->
    <div class="col-md-12 col-sm-12">
      <div class="display">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4><%=t('.actions')%></h4>
          </div>
          <div class="panel-body">
            <%= action_content %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

<% end %>
