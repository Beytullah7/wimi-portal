<%- model_class = Project -%>
<div class="page-header">
  <h1> Dashboard </h1>
</div>

<div class="col-md-12">
  <% current_user.notifications.each do |notification| %>
    <div class="col-md-8 flash-message">
      <div class="alert alert-warning">
        <%= notification.message %>
        <% notification.destroy %>
      </div>
    </div>
  <% end %>
</div>

<h3> My Projects </h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
      <% current_user.projects.each do |project| %>
      <tr>
        <td><%= link_to project.id, project_path(project) %></td>
        <td><%= link_to project.title, project %></td>
        <td><%=l project.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_project_path(project), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      project_path(project),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('.new', :default => t("helpers.links.new")), new_project_path, :class => 'btn btn-primary' %>

<% if current_user.is_superadmin? %>
    <h3> <%= I18n.t('chairs', default: 'Chairs') %> </h3>
    <table class="table table-striped">
      <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
      </tr>
      </thead>
      <tbody>
      <% Chair.all.each do |chair| %>
          <tr>
            <td><%= link_to chair.id, chair_path(chair) %></td>
            <td><%= link_to chair.name, chair_path(chair) %></td>
            <td><%=l chair.created_at %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= link_to I18n.t('chairs.add', default: 'Add Chair'), new_chair_path, :class => 'btn btn-primary' %>
<% end %>