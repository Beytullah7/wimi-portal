<%= form_for @contract do |f| %>

  <% if @contract.errors.any? %>
  <div id="error_expl" class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title"><%= pluralize(@contract.errors.count, "error") %> prohibited this contract from being saved:</h3>
    </div>
    <div class="panel-body">
      <ul>
      <% @contract.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
  <% end %>

  <div class="panel panel-default">
    <!-- <div class="panel-heading"><h4></h4></div> -->
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :start_date, class: 'control-label' %>
        <%= f.text_field :start_date, value: @contract.start_date, class: 'form-control' %>
        <%= error_span(@contract[:start_date]) %>
      </div>
      <div class="form-group">
        <%= f.label :end_date, class: 'control-label' %>
        <%= f.text_field :end_date, value: @contract.end_date, class: 'form-control' %>
        <%= error_span(@contract[:end_date]) %>
      </div>
      <div class="form-group">
        <%= f.label :hiwi_id, class: 'control-label' %>
        <%= f.collection_select :hiwi_id, User.all, :id, :name_with_email, {:include_blank => true}, {:class=>'form-control user-auto-complete'} %>
        <%= error_span(@contract[:hiwi_id]) %>
      </div>
      <div class="form-group">
        <%= f.label :responsible_id, class: 'control-label' %>
        <%= f.collection_select :responsible_id, User.all, :id, :name_with_email, {:include_blank => true}, {:class=>'form-control user-auto-complete'} %>
        <%= error_span(@contract[:responsible_id]) %>
      </div>
      <div class="form-group">
        <%= f.label :chair_id, class: 'control-label' %>
        <%= f.collection_select :chair_id, Chair.all, :id, :name, {:include_blank => true}, {:class=>'form-control'} %>
        <%= error_span(@contract[:chair_id]) %>
      </div>
      <div class="form-group">
        <%= f.label :flexible, class: 'control-label' %>
        <%= f.check_box :flexible, value: @contract.flexible, class: 'form-control' %>
        <%= error_span(@contract[:flexible]) %>
      </div>
      <div class="form-group">
        <%= f.label :hours_per_week, class: 'control-label' %>
        <%= f.text_field :hours_per_week, value: @contract.hours_per_week, class: 'form-control' %>
        <%= error_span(@contract[:hours_per_week]) %>
      </div>
      <div class="form-group">
        <%= f.label :wage_per_hour, class: 'control-label' %>
        <%= f.text_field :wage_per_hour, value: @contract.wage_per_hour, class: 'form-control' %>
        <%= error_span(@contract[:wage_per_hour]) %>
      </div>
    </div>
  </div><br/><br/>
  <div class="actions">
    <div class="row">
      <div class="col-sm-9">
        <%= f.submit t('helpers.links.save'), class: 'btn btn-success btn-block' %>
      </div>
      <div class="col-sm-3">
        <%= link_to t('.cancel', default: t("helpers.links.cancel")), current_user, class: "btn btn-default btn-block"%>
      </div>
    </div>
  </div>
<% end %>
