<%- model_class = Contract -%>
<div class="col-md-12 col-sm-12">
  <div class="display">
    <div class="page-header">
      <h1><%= @contract.hiwi.name %></h1>
    </div>
    <dl>
        <dt>Start</dt>
        <dd><%= @contract.start_date %> </dd>
        <dt>End</dt>
        <dd><%= @contract.end_date %> </dd>
        <dt>Flexible</dt>
        <dd><%= @contract.flexible %> </dd>
        <dt>Hours per week</dt>
        <dd><%= @contract.hours_per_week %> </dd>
        <dt>Wage per hour</dt>
        <dd><%= @contract.wage_per_hour %> </dd>
    </dl>
    <% if can? :edit, @contract %>
    <%= link_to t('helpers.links.edit', model: model_class.model_name.human.titleize),
                edit_contract_path(@contract),
                class: 'btn btn-warning btn-xs' %>
    <%= link_to t('helpers.links.destroy', model: model_class.model_name.human.titleize),
                contract_path(@contract), method: :delete,
                class: 'btn btn-danger btn-xs' %>
    <% end %>
  </div>
</div>
