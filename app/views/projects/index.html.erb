<%- model_class = Project -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= t("helpers.links.application") %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.id, project_path(project) %></td>
        <td><%= project.title %></td>
        <td><%= project.created_at %></td>
        <td>
          <% if project.project_applications.exists?(user_id: current_user.id) %>
            <% project_application = project.project_applications.find_by(user_id: current_user.id) %>
              <% case project_application.status %>
                <% when "pending" %>
                  <%= link_to t('.cancel', :default => t("helpers.links.pending_cancel")),
                    project_application_path(project_application),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger btn-xs' %>
                <% when "accepted" %>
                  <span class="label label-success"><%= project_application.status %></span>
                <% when "declined" %>
                  <%= link_to t('.reapply', :default => t("helpers.links.refused_reapply")),
                    project_applications_path(:project => project_application.project), :method => :post, :class => 'btn btn-danger btn-xs' %>
              <% end %>
          <% else %>
            <%= link_to t('.apply', :default => t("helpers.links.apply")),
              project_applications_path(:project => project), :method => :post, :class => 'btn btn-primary btn-xs' %>
          <% end %>
        </td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_project_path(project), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      project_path(project),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_project_path,
            :class => 'btn btn-primary' %>
