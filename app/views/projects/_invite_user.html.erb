<div class="modal fade" id="invite-colleagues-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"> Jemanden in das Project "<%= @project.title %>" einladen</h4>
      </div>
      <div class="modal-body" >
        <div class="row invite-colleague">
          <div class="col-sm-12">
            <div class="description-text">
              Einladung senden an:
              <%= form_for :invite_user, url: invite_user_project_path(@project) do |f| %>
                <div class="modal-body clearfix" >
                  <%= f.text_field :email, { class: "typeahead form-control", size: 100, placeholder: "max.mustermann@student.hpi.uni-potsdam.de" } %>
                </div>
                <%= f.submit "Senden", class: "btn btn-primary" %>
                <span class="btn btn-default", data-dismiss="modal">Abbrechen</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>