<p id="notice"><%= notice %></p>

<h1>Listing Chair Applications</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Chair</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chair_applications.each do |chair_application| %>
      <tr>
        <td><%= chair_application.user %></td>
        <td><%= chair_application.chair %></td>
        <td><%= chair_application.status %></td>
        <td><%= link_to 'Show', chair_application %></td>
        <td><%= link_to 'Edit', edit_chair_application_path(chair_application) %></td>
        <td><%= link_to 'Destroy', chair_application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

